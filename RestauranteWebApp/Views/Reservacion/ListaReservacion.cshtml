
@model IEnumerable<RestauranteWebApp.Models.M_Reservaciones>

@{
    ViewBag.Title = "ListaReservacion";
}

<h2>ListaReservacion</h2>

<p>
    @Html.ActionLink("Agrega Reservacion", "AgregarReservacion")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_reservacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_mesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_menu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_reservacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_reservacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_mesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_menu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_reservacion)
            </td>
            <td>
                @Html.ActionLink("Editar", "ModificarReservacion", new { id = item.id_reservacion }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Eliminar", "EliminarReservacion", new { id = item.id_reservacion })
            </td>
        </tr>
    }

</table>